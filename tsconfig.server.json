{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",  // Critical change - use CommonJS instead of Node16
    "moduleResolution": "Node",  // Use classic Node resolution
    "outDir": "./dist",
    "rootDir": "./server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["server/**/*"]
}
