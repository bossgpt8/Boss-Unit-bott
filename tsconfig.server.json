{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",  // Critical for import.meta support
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "rootDir": "./server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["server/**/*"]
}
