{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // ← not Node16, regular CommonJS
    "moduleResolution": "Node", // ← classic Node resolution
    "outDir": "dist",
    "rootDir": "server",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
